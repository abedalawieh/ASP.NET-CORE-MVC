@model ProductVM

<div class="card shadow mt-4 rounded-2">
    <div class="card-header bg-primary text-light py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body px-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="row p-1 mb-2">
                    <label asp-for="Title" class="p-0"></label>
                    <input asp-for="Title" type="text" class="form-control shadow" disabled />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="Description" class="p-0"></label>
                    <input asp-for="Description" type="text" class="form-control shadow" disabled />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="ISBN13" class="p-0"></label>
                    <input asp-for="ISBN13" type="text" class="form-control shadow" disabled />
                    <span asp-validation-for="ISBN13" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="Author" class="p-0"></label>
                    <input asp-for="Author" type="text" class="form-control shadow" disabled />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="PriceList" class="p-0"></label>
                    <input asp-for="PriceList" type="number" class="form-control shadow" disabled />
                    <span asp-validation-for="PriceList" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="PriceStandart" class="p-0"></label>
                    <input asp-for="PriceStandart" type="number" class="form-control shadow" disabled />
                    <span asp-validation-for="PriceStandart" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="Price50More" class="p-0"></label>
                    <input asp-for="Price50More" type="number" class="form-control shadow" disabled />
                    <span asp-validation-for="Price50More" class="text-danger"></span>
                </div>
                <div class="row p-1 mb-2">
                    <label asp-for="Price100More" class="p-0"></label>
                    <input asp-for="Price100More" type="number" class="form-control shadow" disabled />
                    <span asp-validation-for="Price100More" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-outline-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-asp-controller="Category" asp-action="Index"
                       class="btn btn-outline-info form-control">Back to list</a>
                </div>
            </div>
        </form>
    </div>
</div>