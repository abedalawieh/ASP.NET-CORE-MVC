@model CategoryVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-light ml-0 py-3 rounded-top-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body px-4 rounded-bottom-2">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="row p-1 mb-3">
                    <label asp-for="Name" class="p-0">Category Name</label>
                    <input asp-for="Name" type="text" class="form-control shadow" disabled />
                </div>
                <div class="row p-1 mb-3">
                    <label asp-for="DisplayOrder" class="p-0">Display Order</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control shadow" disabled />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit"
                                class="btn btn-outline-danger form-control">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category"
                           asp-action="Index"
                           class="btn btn-outline-info form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>