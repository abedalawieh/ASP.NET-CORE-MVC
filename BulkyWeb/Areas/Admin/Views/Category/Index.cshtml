@model IEnumerable<CategoryVM>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-light ml-0 py-3 rounded-top-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body px-4 rounded-bottom-2">
        <div class="container">
            <div class="row pt-4 pb-3">
                <div class="col-12 text-end">
                    <a class="btn btn-outline-success" asp-controller="Category" asp-action="Upsert">
                        <i class="bi bi-plus-circle"></i> New Category
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-borderless table-striped table-light">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Category"
                                   asp-action="Upsert"
                                   asp-route-id="@category.Id"
                                   class="btn btn-outline-warning mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category"
                                   asp-action="Delete"
                                   asp-route-id="@category.Id"
                                   class="btn btn-outline-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>